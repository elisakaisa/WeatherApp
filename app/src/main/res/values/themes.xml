        <item name="colorPrimary">@color/regal_blue</item>
        <item name="colorPrimaryVariant">@color/outer_space</item>
        <item name="colorOnPrimary">@color/rose_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/matisse</item>
        <item name="colorSecondaryVariant">@color/blue_zodiac</item>
        <item name="colorOnSecondary">@color/outer_space</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
